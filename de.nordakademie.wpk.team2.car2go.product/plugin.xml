<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="de.nordakademie.wpk.team2.car2go.product.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="Perspective"
            class="de.nordakademie.wpk.team2.car2go.product.Perspective"
            id="de.nordakademie.wpk.product.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="File">
            <command
                  commandId="org.eclipse.ui.file.exit"
                  label="Exit">
            </command>
            <command
                  commandId="org.eclipse.ui.file.save"
                  label="Speichern"
                  style="push">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         id="todolist"
         point="org.eclipse.core.runtime.products">
      <product
            application="de.nordakademie.wpk.todolist.product.application"
            name="Todoliste">
         <property
               name="appName"
               value="Todoliste">
         </property>
      </product>
   </extension>
   <extension
         id="Car2Go"
         point="org.eclipse.core.runtime.products">
      <product
            application="de.nordakademie.wpk.team2.car2go.product.application"
            name="Car2Go">
      </product>
   </extension>

</plugin>
